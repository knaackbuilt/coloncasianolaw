<header class="flex w-full justify-start py-4 border-t-2 border-ccl-dark"> 
    <nav class="flex w-full" aria-label="Primary Site Navigation">
      
        <div class="acc-logo h-28 w-3/4 ">
          <span class="sr-only"> The Law Firm of Adriel Colon-Casiano </span>
        </div>
          <div class="flex lg:hidden w-1/4 justify-end">
            <button class="block lg:hidden p-4 mr-8 focus:!outline-white text-black nysds-mobile-button" id="nysds-mobile-menu" aria-controls="nysds-list-menu" aria-expanded="false">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
              </svg>
              <span class="sr-only">Mobile Navigation Menu</span>
            </button>
          </div>
  
      <ul class="hidden lg:static lg:flex lg:flex-row lg:items-center w-full justify-end mr-8 text-black captialize font-bold" id="nysds-list-menu" >
      {% for links in params.items %}
        <li class="m-4 p-4">
            <a href="{{links.link}}" class="inline-block nysds-submenu-link">{{links.title}}</a>
        </li>
      {% endfor %}
      </ul>
    </nav>
</header>



