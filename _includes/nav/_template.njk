<header class="flex w-full justify-start pt-2 mb-2"> 
    <nav class="flex w-full flex-col lg:flex-row justify-between" aria-label="Primary Site Navigation">
      <section class="flex flex-row w-full lg:w-1/4 ">
        <div class="w-full">
          <a href="/" class=" block">
          <div class="acc-logo h-24 sm:h-28">
            <span class="sr-only"> The Law Firm of Adriel Colon-Casiano </span>
          </div>
          </a>
        </div>
          <div class="flex lg:hidden w-1/4 ml-16 justify-end">
            <button class="block h-28 lg:hidden p-4 mr-2 md:mr-8 focus:!outline-ccl-dark text-black mobile-button" id="mobile-menu" aria-controls="list-menu" aria-expanded="false">
              
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#000" class="bi bi-list mobile-button relative -z-1"  viewBox="0 0 16 16">
                <path id="mobile-icon" class="mobile-button" fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
              </svg>
              
              <span class="sr-only">Mobile Navigation Menu</span>
            </button>
          </div>
      </section>
      <section class="hidden lg:flex mt-2" id="list-menu">
        <ul class="flex-col w-full lg:flex-row -mb-2 lg:mb-0 pl-4 lg:pl-0 bg-ccl-dark text-white lg:text-black lg:bg-white right-0 lg:mt-0 lg:static lg:flex lg:items-end lg:mr-8 captialize font-bold"  >
        {% for links in params.items %}
          <li class=" p-4 text-lg uppercase">
              <a href="{{links.link}}" class="inline-block submenu-link">{{links.title}}</a>
          </li>
        {% endfor %}
        </ul>
      </section>
      
    </nav>
</header>



