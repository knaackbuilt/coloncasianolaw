<article class="flex justify-center py-8 my-4 bg-gray-100 -mx-8">
<div class="w-full md:w-2/3 flex flex-col lg:flex-row">
<section class="w-full flex justify-center lg:w-1/3">
<img class="object-cover h-96 rounded-full border-8 border-ccl-light" src="{{params.image}}" alt="{{params.imagealt}}" />
</section>
<section class="flex flex-col px-12 justify-center w-full lg:w-2/3 lg:pl-12">
<h3 class="nysds-text-32 font-bold my-4 text-black">{{params.title}}</h3>
<p class="mb-4 !text-black">{{params.content}}</p>
{% if params.attribute%}<span class="flex text-sm italic justify-end mt-2 !text-black md:mb-0 mb-8"> - {{params.attribute}} </span>{%else%}{%endif%}
{%if params.link %}<a class="bg-ccl-dark text-white uppercase border-ccl-dark border no-underline hover:bg-ccl-mid hover:underline focus:bg-ccl-mid focus:underline mb-8 p-4 rounded-2xl font-bold text-center m-auto lg:m-0 w-2/3 md:w-1/3" href="{{params.link}}" {% if params.arialabel %} aria-label="{{params.arialabel}}" {%endif%}>{{params.linktext}}</a>{%else%}{%endif%}
</section>
</div>
</article>