<style>
.hero-background-image {
    background-image: url('../img/{{params.image}}');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
}
</style>

<section class="relative -mx-8 border-t-4 border-ccl-light text-white">
<div class="hero-background-image h-72 lg:h-96"></div> <!-- Background image -->
<div class="w-full h-full flex lg:absolute lg:top-0">
<div class="flex w-full lg:w-1/2 items-center lg:ml-8">
<section class="bg-ccl-dark p-5 w-full lg:w-2/3 lg:bg-opacity-90 lg:rounded-xl 2xl:max-w-2xl">
<h2 class="font-bold text-4xl mb-4 text-white">{{params.title}}</h2>
<p class="mb-4"> {{params.description }} </p>
<div class="flex flex-col md:flex-row">
{% if params.buttons %}{% for button in params.buttons%}
<div class="w-full md:w-auto">
<a class="no-underline text-white mr-1 uppercase font-bold border-b border-white hover:border-white hover:border-b-2" href="{{button.link}}">{{button.text}}</a><span class="icon-long-arrow-right mr-8" aria-hidden="true"></span>
</div>{% endfor %}{%else%}{%endif%}
</div>
</section>
</div>
</div>
</section>  