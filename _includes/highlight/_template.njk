<article class="-mx-8 md:-mx-20 my-14 ">
<div class="nysds-highlight-{{params.framecolor}} w-full flex flex-col">
<section class="flex flex-col self-center w-5/6 pb-8 pt-12 max-w-7xl">
<h2 class="nysds-text-36 font-extrabold text-center mb-12 w-full">{{params.title}}</h2>
<p class="mb-8 !text-black">{{params.content}}</p>
{% if params.link %}<a class="w-3/4 md:w-2/3 lg:w-1/3 border !text-black visited:!text-black hover:!text-white focus:!text-white !no-underline uppercase tracking-wider hover:!underline focus:!underline m-auto mb-8 p-4 rounded-xl font-bold text-center" href="{{params.link}}" {% if params.arialabel %} aria-label="{{params.arialabel}}" {%endif%}>{{params.linktext}}</a>{% else %}{% endif %}
</section>
</div>
</article>