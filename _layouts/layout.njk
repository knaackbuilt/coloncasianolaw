<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://{{url}}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{facebook.title}}">
    <meta property="og:description" content="{{facebook.description}}">
    <meta property="og:image" content="https://{{domain}}/img/{{facebook.image}}">
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://{{url}}">
    <meta name="twitter:title" content="{{twitter.title}}">
    <meta name="twitter:description" content="{{twitter.description}}">
    <meta name="twitter:image" content="https://{{domain}}/img/{{twitter.image}}">
    {% include '_css-link.njk' %}
    {% include '_js-link.njk' %}
    <title>{{ title }}</title>
  </head>
  <body class="">
  <a href="#main-site-content-for-skiplink" class="sr-only focus:not-sr-only text-blue-700 underline">Skip to Main Content</a>
    {% from '../_includes/_components.njk' import nav,footer  %}
      <header class="flex justify-center md:justify-start py-4 border-t-2 border-ccl-dark"> 
        <div class="acc-logo h-28 w-72">
        <span class="sr-only"> The Law Firm of Adriel Colon-Casiano </span>
        </div>
      </header>
     {# {% include 'nav-data.md' %} #}
    <main class="mx-8" id="main-site-content-for-skiplink">
    {{ content | safe }}
    </main>
    {# {% include 'footer-data.md' %} #}
  </body>
</html>